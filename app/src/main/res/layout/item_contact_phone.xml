<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_contact_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:maxLines="1"
        android:textAllCaps="true"
        android:text="Muhammad"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/item_contact_image"
        app:layout_constraintTop_toTopOf="@+id/item_contact_image"
        tools:layout_editor_absoluteY="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_contact_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:maxLines="1"
        android:text="+628978736487"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/item_contact_image"
        app:layout_constraintTop_toBottomOf="@+id/item_contact_name"
        tools:layout_editor_absoluteY="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_contact_relation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:maxLines="1"
        android:text="+628978736487"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/item_contact_image"
        app:layout_constraintTop_toBottomOf="@+id/item_contact_phone"
        tools:layout_editor_absoluteY="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_contact_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:maxLines="1"
        android:text="+628978736487"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/item_contact_relation"
        app:layout_constraintTop_toBottomOf="@id/item_contact_phone"
        tools:layout_editor_absoluteY="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>